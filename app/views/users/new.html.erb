
<!-- Create Form -->

<h1 class="custom_h1">Sign up for Goldenshop</h1>
<div class="row">
	<div class="col-xs-12">
		<!-- Create Form -->		
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<!-- Title -->
			<div class="form-group">

				<div class="control-label col-sm-2">		
					<%= f.label :username %>
				</div>

				<div class="col-sm-8">	
					<%= f.text_field :username, class: "form-control", placeholder: "Enter your username", autofocus: true %>
				</div>	

			</div>
			<!-- Description -->
			<div class="form-group">

				<div class="control-label col-sm-2">
					<%= f.label :email %>
				</div>

				<div class="col-sm-8">
					<%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
				</div>

			</div>

			<!-- Password -->
			<div class="form-group">

				<div class="control-label col-sm-2">
					<%= f.label :password %>
				</div>

				<div class="col-sm-8">
					<%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
				</div>

			</div>


			
			<!-- Submit btn -->
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
				</div>		
			</div>
	</div>
</div>

				
		<% end %>
		<div class="col-xs-4 col-sm-offset-4">					
			<%= link_to 'Cancel request and return to article listing', articles_path%>
		</div>

	</div>
</div>